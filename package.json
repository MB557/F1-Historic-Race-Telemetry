{
  "name": "f1-historic-race-replayer",
  "version": "1.0.0",
  "description": "F1 Historic Race Replayer with Next.js frontend and serverless functions",
  "main": "server.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run frontend\"",
    "server": "nodemon server.js",
    "frontend": "cd frontend && npm run dev",
    "build": "cd frontend && npm run build",
    "start": "node server.js",
    "install-all": "npm install && cd frontend && npm install"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
